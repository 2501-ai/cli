{
  "shiva": {
    "type": "http",
    "name": "shiva api",
    "description": "Interact with the Shiva api",
    "actions": [
      {
        "description": "Generate an authentication Bearer token for Shiva API access. This token must be included in the Authorization header for subsequent Shiva API requests",
        "method": "POST",
        "endpoint": "https://shiva.cloud-temple.com/api/iam/v2/auth/personal_access_token",
        "parameters": [
          {
            "name": "id",
            "type": "string",
            "description": "The id of the shiva user",
            "required": true,
            "value": "{SHIVA_ID}"
          },
          {
            "name": "secret",
            "type": "string",
            "description": "The secret of the shiva user",
            "required": true,
            "value": "{SHIVA_SECRET}"
          }
        ]
      }
    ]
  },
  "rtms": {
    "type": "http",
    "name": "RTMS",
    "description": "Interact with the RTMS",
    "version": "1.0.0",
    "auth": {
      "type": "bearer",
      "credentials": {
        "token": "{RTMS_BEARER}"
      }
    },
    "actions": [
      {
        "id": "notify",
        "name": "Notify",
        "description": "Notify the RTMS System",
        "method": "POST",
        "endpoint": "http://localhost:3000/api/notify",
        "parameters": [
          {
            "name": "ticket_id",
            "type": "string",
            "description": "The ticket id",
            "required": true
          },
          {
            "name": "message",
            "type": "string",
            "description": "The message to notify the RTMS System",
            "required": true
          },
          {
            "name": "status",
            "type": "string",
            "description": "The status of the ticket",
            "required": true
          }
        ]
      }
    ]
  },
  "tfzo": {
    "type": "http",
    "name": "2501 API",
    "description": "Interact with the 2501 API",
    "version": "1.0.0",
    "auth": {
      "type": "bearer",
      "credentials": {
        "token": "{TFZO_BEARER}"
      }
    },
    "actions": [
      {
        "id": "create_agent",
        "name": "Create Agent",
        "description": "Create a new AI agent",
        "method": "POST",
        "endpoint": "https://engine.2501.ai/api/v1/agents",
        "parameters": [
          {
            "name": "workspace",
            "type": "string",
            "description": "Workspace identifier",
            "required": true
          },
          {
            "name": "configuration",
            "type": "string",
            "description": "Agent configuration",
            "required": true
          },
          {
            "name": "prompt",
            "type": "string",
            "description": "Agent prompt",
            "required": true
          },
          {
            "name": "engine",
            "type": "string",
            "description": "Engine to use",
            "required": true
          }
        ],
        "examples": [
          {
            "description": "Create a basic agent",
            "parameters": {
              "workspace": "my-workspace",
              "configuration": "default",
              "prompt": "You are a helpful assistant",
              "engine": "gpt-4"
            }
          }
        ]
      }
    ],
    "metadata": {
      "content_type": "application/json"
    }
  }
}
